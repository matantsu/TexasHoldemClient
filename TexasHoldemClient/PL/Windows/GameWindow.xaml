<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TexasHoldemClient.PL.Windows"
        xmlns:UserControls="clr-namespace:TexasHoldemClient.PL.UserControls" x:Class="TexasHoldemClient.PL.Windows.GameWindow"
        mc:Ignorable="d"
        Title="GameWindow"  WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="RowFor_ToolsBarSpace"  Height="1*" />
            <RowDefinition x:Name="RowFor_GameAndChatSpace" Height="15*" />
        </Grid.RowDefinitions>



        <Grid Name="ToolsBarSpace" Grid.Row="0" Background="Gray">

        </Grid>

        <Grid x:Name="GameAndChatSpace" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ColFor_ChatSpace"  Width="5*" />
                <ColumnDefinition x:Name="ColFor_GameSpace" Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="GameSpace" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Name="RowFor_GameBoardSpace" Height="10*"/>
                    <RowDefinition Name="RowFor_UserActionsSpace" Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Name="GameBoardSpace_cards" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                <Grid.Background>
                        <ImageBrush ImageSource="C:\Users\Barakmen\Desktop\אוניסרביטאת בן גוריון שנה א\שנה ג\סמסטר ב\סנדא ליישום פרוייקטי תכנה\newClient_2\TexasHoldemClient\Resorces\poker_table.jpg"/>
                    </Grid.Background>

                    <UserControls:OpenCardsControl Grid.Row="1" Grid.Column="1"></UserControls:OpenCardsControl>
                </Grid>
                <Grid Name="placeUserControls" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Name="RowFor_EmptyMarginsSpace" Height="1*"/>
                            <RowDefinition Name="RowFor_Players01Space" Height="1*"/>
                            <RowDefinition Name="RowFor_Players23Space" Height="1*"/>
                            <RowDefinition Name="RowFor_Players45Space" Height="1*"/>
                        </Grid.RowDefinitions>

                        <Grid Name="Players01Space" Grid.Row="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid Name="Player0Space" Grid.Column="0" >
                                <StackPanel Orientation="Horizontal" Margin="150,0,0,0" HorizontalAlignment="Left">
                                    <UserControls:PlayerControl x:Name="Player0" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="Auto" Canvas.Left="44" Canvas.Top="176"/>
                                </StackPanel>
                            </Grid>
                            <Grid Name="Player1Space" Grid.Column="1" >
                                <StackPanel Orientation="Horizontal" Margin="190,0,0,0" HorizontalAlignment="Left">
                                    <UserControls:PlayerControl x:Name="Player1" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="Auto"/>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <Grid Name="Players23Space" Grid.Row="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid Name="Player2Space" Grid.Column="0" >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <UserControls:PlayerControl Margin="100,0,0,0" x:Name="Player2" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="Auto" Canvas.Left="44" Canvas.Top="176"/>
                                </StackPanel>
                            </Grid>
                            <Grid Name="Player3Space" Grid.Column="1" >
                                <StackPanel Orientation="Horizontal" Margin="230,0,0,0" HorizontalAlignment="Left">
                                    <UserControls:PlayerControl x:Name="Player3" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="Auto" Canvas.Left="44" Canvas.Top="176"/>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <Grid Name="Players45Space" Grid.Row="3" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid Name="Player4Space" Grid.Column="0" >
                                <StackPanel Orientation="Horizontal" Margin="150,0,0,0" HorizontalAlignment="Left">
                                    <UserControls:PlayerControl x:Name="Player4" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="Auto"/>
                                </StackPanel>
                            </Grid>
                            <Grid Name="Player5Space" Grid.Column="1" >
                                <StackPanel Orientation="Horizontal" Margin="150,0,0,0" HorizontalAlignment="Left">
                                    <UserControls:PlayerControl x:Name="Player5" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="Auto" Canvas.Left="44" Canvas.Top="176"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        
                    </Grid>

                <Grid Name="UserActionsSpace" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />

                    </Grid.ColumnDefinitions>

                    <Button Click="Check_Click" Grid.Column="0" Background="Aqua">Check</Button>
                    <Button Click="Fold_Click" Grid.Column="1" Background="Aquamarine">Fold</Button>
                    <Grid Grid.Column="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Button Click="Raise_Click"  Background="Beige">Raise</Button>
                            <Grid/>
                        </Grid>
                        <Grid Grid.Row="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Enter Bet:"/>
                            <TextBox Name="BetTextBox" Grid.Column="1" />
                        </Grid>



                    </Grid>

                </Grid>
            </Grid>

            <Grid x:Name="ChatSpace" Grid.Column="1" Background="GreenYellow">
                <UserControls:ChatControl />
            </Grid>

        </Grid>
    </Grid>
</Window>
